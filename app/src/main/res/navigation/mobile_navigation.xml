<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.androbank.ui.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_nav_home_to_roni_test"
            app:destination="@id/roni_test"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_fade_exit" />
        <action
            android:id="@+id/action_nav_home_to_main_Menu"
            app:destination="@id/main_Menu"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_nav_home_to_createUser"
            app:destination="@id/createUser" />
    </fragment>

    <fragment
        android:id="@+id/roni_test"
        android:name="com.example.androbank.ui.roniTest.RoniTestFragment"
        android:label="Roni Test Fragment"
        tools:layout="@layout/fragment_roni_test">
        <action
            android:id="@+id/action_roni_test_to_fragment_roni_test_success"
            app:destination="@id/fragment_roni_test_success" />
    </fragment>
    <fragment
        android:id="@+id/fragment_roni_test_success"
        android:name="com.example.androbank.ui.roniTest.RoniTestFragmentSuccess"
        android:label="Roni test success"
        tools:layout="@layout/fragment_roni_test_success" />
    <fragment
        android:id="@+id/accounts"
        android:name="com.example.androbank.ui.Accounts"
        android:label="fragment_accounts"
        tools:layout="@layout/fragment_accounts" >
        <action
            android:id="@+id/action_accounts_to_cards"
            app:destination="@id/cards" />
        <action
            android:id="@+id/action_accounts_to_newCardPayment2"
            app:destination="@id/newCardPayment2" />
        <action
            android:id="@+id/action_accounts_to_newPayment"
            app:destination="@id/newPayment" />
    </fragment>
    <fragment
        android:id="@+id/cards"
        android:name="com.example.androbank.ui.Cards"
        android:label="fragment_cards"
        tools:layout="@layout/fragment_cards" >
        <action
            android:id="@+id/action_cards_to_accounts"
            app:destination="@id/accounts" />
    </fragment>
    <fragment
        android:id="@+id/main_Menu"
        android:name="com.example.androbank.ui.Main_Menu"
        android:label="Main menu"
        tools:layout="@layout/fragment_main__menu">
        <action
            android:id="@+id/action_main_Menu_to_accounts"
            app:destination="@id/accounts" />
        <action
            android:id="@+id/action_main_Menu_to_userDetails"
            app:destination="@id/userDetails" />
        <action
            android:id="@+id/action_main_Menu_to_transactions"
            app:destination="@id/transactions" />
        <action
            android:id="@+id/action_main_Menu_to_nav_home"
            app:destination="@id/nav_home"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/userDetails"
        android:name="com.example.androbank.ui.UserDetails"
        android:label="fragment_user_details"
        tools:layout="@layout/fragment_user_details" >
        <action
            android:id="@+id/action_userDetails_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
    <fragment
        android:id="@+id/transactions"
        android:name="com.example.androbank.ui.Transactions"
        android:label="fragment_transactions"
        tools:layout="@layout/fragment_transactions" >
        <action
            android:id="@+id/action_transactions_to_main_Menu"
            app:destination="@id/main_Menu" />
    </fragment>
    <fragment
        android:id="@+id/newPayment"
        android:name="com.example.androbank.ui.NewPayment"
        android:label="fragment_new_payment"
        tools:layout="@layout/fragment_new_payment" >
        <action
            android:id="@+id/action_newPayment_to_accounts"
            app:destination="@id/accounts" />
    </fragment>
    <fragment
        android:id="@+id/newCardPayment2"
        android:name="com.example.androbank.ui.NewCardPayment"
        android:label="NewCardPayment" >
        <action
            android:id="@+id/action_newCardPayment2_to_accounts"
            app:destination="@id/accounts" />
    </fragment>
    <fragment
        android:id="@+id/createUser"
        android:name="com.example.androbank.ui.CreateUser"
        android:label="Create User"
        tools:layout="@layout/create_user" >
        <action
            android:id="@+id/action_createUser_to_main_Menu"
            app:destination="@id/main_Menu"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>